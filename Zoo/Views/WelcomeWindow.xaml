<Window x:Class="Zoo.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoo"
        xmlns:views="clr-namespace:Zoo.Views"
        xmlns:viewmodels="clr-namespace:Zoo.ViewModels"       
        mc:Ignorable="d"
        Title="Избор" WindowStartupLocation="CenterScreen" MinHeight="900" MinWidth="1400">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:AnimalsWindowVM}">
                <views:AnimalsWindow/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:EventsWindowVM}">
                <views:EventsWindow/>
            </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:TicketsWindowVM}">
            <views:TicketsWindow/>
        </DataTemplate>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="C:\Users\mihael.mihalev\Desktop\Izpitvane\Zoo\Zoo\Images\background.jpg"></ImageBrush>
    </Window.Background>
    <Grid Margin="60,60,60,60" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Background="Transparent" Name="btnAnimals" BorderBrush="White" BorderThickness="4" Content="Животни" Foreground="Yellow" FontSize="30" Grid.Column="0" HorizontalAlignment="Left" Width="200" Height="100" VerticalAlignment="Top" Margin="4,10,0,0" 
                     Command="{Binding UpdateViewCommand}" CommandParameter="Animals" Grid.RowSpan="3" Grid.ColumnSpan="2" RenderTransformOrigin="0.5,1">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Name="btnEvents" 
                    Background="Transparent"
                    BorderBrush="Transparent" 
                    Foreground="Yellow" 
                    FontSize="30"  
                    Grid.Column="1" 
                    HorizontalAlignment="Center"  
                    Width="200"
                    Height="100" 
                    VerticalAlignment="Top"
                    Margin="0,10,0,0" 
                    Command="{Binding UpdateViewCommand}"
                    CommandParameter="Events">
                <Image Width="250" Height="120"  Source="C:\Users\mihael.mihalev\Desktop\Izpitvane\Zoo\Zoo\Images\events.png"></Image>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            
            <Button Name="btnTickets"  Background="Transparent" Foreground="Yellow" FontSize="30" BorderBrush="Red" BorderThickness="4" Content="Билети" Grid.Column="2" HorizontalAlignment="Right" Width="200" Height="100" VerticalAlignment="Top" Margin="0,10,3,0" Command="{Binding UpdateViewCommand}" CommandParameter="Tickets" Grid.RowSpan="3">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>

        <ContentControl  Grid.Row="1" Content="{Binding  SelectedViewModel}">

        </ContentControl>
    </Grid>
</Window>
