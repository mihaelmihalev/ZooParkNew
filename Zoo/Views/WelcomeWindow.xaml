<Window x:Class="Zoo.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoo"
        mc:Ignorable="d"
        Title="Избор" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="C:\Users\mihael.mihalev\Desktop\Izpitvane\Zoo\Zoo\Images\background.jpg"></ImageBrush>
    </Window.Background>
    <Grid Margin="60,60,60,60" Height="600" HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*" />
            <ColumnDefinition Width="18*" />
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <Button Name="btnAnimals" Content="Животни" HorizontalAlignment="Left" Width="200" Height="100" VerticalAlignment="Top" Grid.Row="0" Grid.Column="0" Command="{Binding SelectAnimalsCommand}"/>
        <Button Name="btnEvents" Content="Събития" HorizontalAlignment="Center" Width="200" Height="100" VerticalAlignment="Top" Grid.Row="0" Grid.Column="1" Command="{Binding SelectEventsCommand}"/>
        <Button Name="btnTickets" Content="Билети" HorizontalAlignment="Right" Width="200" Height="100" VerticalAlignment="Top" Grid.Row="0" Grid.Column="2" Command="{Binding SelectTicketsCommand}"/>
    </Grid>
    
</Window>
