<Window x:Class="Zoo.Views.EventsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoo.Views"
        mc:Ignorable="d"
        Title="Животни" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="C:\Users\mihael.mihalev\Desktop\Izpitvane\Zoo\Zoo\Images\background.jpg"></ImageBrush>
    </Window.Background>
    <Grid Margin="60,60,60,60" Height="600" HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*" />
            <ColumnDefinition Width="18*" />
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <Button  Name="btnAnimals"  BorderBrush="White" BorderThickness="4"  Content="Животни" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Width="200" Height="100" VerticalAlignment="Top" Margin="4,10,0,0" Command="{Binding SelectAnimalsCommand}" Grid.RowSpan="3" Grid.ColumnSpan="2" RenderTransformOrigin="0.5,1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Name="btnEvents" BorderBrush="White" BorderThickness="4" Content="Събития" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Width="200" Height="100" VerticalAlignment="Top" Margin="0,10,0,0"  Grid.RowSpan="3">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Name="btnTickets" BorderBrush="White" BorderThickness="4" Content="Билети" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" Width="200" Height="100" VerticalAlignment="Top" Margin="0,10,3,0" Command="{Binding SelectTicketsCommand}" Grid.RowSpan="3">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Name="SearchBtn" Content="Търси" HorizontalAlignment="Right" Width="90" Height="30" VerticalAlignment="Center" Grid.Row="1" Command="{Binding SearchEventsByTypeCommand}"/>
        <Label  Name="Search" Content="Моля изберете събитие:"   Foreground="#FF1EF700" Height="45"     
         HorizontalAlignment="Left" VerticalAlignment="Top" Grid.RowSpan="3" Width="300" FontSize="24" Grid.Row="1"/>
        <ComboBox x:Name="ComboBox1"   Width="300" Height="30"  
         HorizontalAlignment="Left" ItemsSource="{Binding Types}" SelectedItem="{Binding SelectedType}"  Grid.Row="1" VerticalAlignment="Center" />
        <ListView x:Name="EventsView" ItemsSource="{Binding Events}"   HorizontalAlignment="Left" VerticalAlignment="Center"  Width="330" Grid.RowSpan="3" Height="110" Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Type}" Header="Категория" Width="320"  />
                </GridView>
            </ListView.View>
        </ListView>
        <DatePicker BorderBrush="Transparent" Height="120" RenderTransformOrigin="1.369,0.376" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="180" Grid.ColumnSpan="2" Grid.Row="1"/>
        <TextBlock  Background="White" Text="{Binding SelectedA.Description}" TextWrapping="Wrap"                         
                    VerticalAlignment="Center" HorizontalAlignment="Left" Width="364" Height="184" Margin="956,0,0,0" Grid.Row="2" Grid.Column="2"/>
    </Grid>
</Window>
