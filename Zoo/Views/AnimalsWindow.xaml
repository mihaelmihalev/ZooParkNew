<Window x:Class="Zoo.Views.AnimalsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoo.Views"
        mc:Ignorable="d"
        Title="Животни" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="C:\Users\mihael.mihalev\Desktop\Izpitvane\Zoo\Zoo\Images\background.jpg"></ImageBrush>
    </Window.Background>
    <Grid Margin="10,0,0,3">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="btnAnimals" Content="Животни" HorizontalAlignment="Left" Width="200" Height="100" VerticalAlignment="Top" Margin="20,7,0,0" Grid.Row="2"  Command="{Binding SelectAnimalsCommand}"></Button>
        <Button Name="btnEvents" Content="Събития" HorizontalAlignment="Center" Width="200" Height="100" VerticalAlignment="Top" Margin="0,7,0,0" Grid.Row="2"  Command="{Binding SelectEventsCommand}"></Button>
        <Button Name="btnTickets" Content="Билети" HorizontalAlignment="Right" Width="200" Height="100" VerticalAlignment="Top" Margin="0,7,20,0" Grid.Row="2"  Command="{Binding SelectedTicketsCommand}"></Button>
        <Button Name="SearchBtn" Content="Търси" HorizontalAlignment="Left" Width="90" Height="30" VerticalAlignment="Top" Margin="325,250,0,0" Grid.Row="2" Command="{Binding SearchAnimalsByCategoryCommand}"></Button>
        <Label  Name="Search" Content="Моля изберете категория:"   Foreground="#FF1EF700" Height="45"     
         HorizontalAlignment="Left"  
         Margin="20,200,0,0" VerticalAlignment="Top" Grid.RowSpan="3" Width="300" FontSize="24"/>
        <ComboBox x:Name="ComboBox1"   Width="300" Height="30"  
         HorizontalAlignment="Left"  
         Margin="20,250,0,0" ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" Grid.Row="2" VerticalAlignment="Top" />
        <ListView x:Name="AnimalsView" ItemsSource="{Binding Animals}"  Margin="20,300,0,0"   HorizontalAlignment="Left" VerticalAlignment="Top"  Width="330" Grid.RowSpan="3" Height="126">
            <ListView.View>

                <GridView>

                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Категория" Width="320"  />

                </GridView>
            </ListView.View>
        </ListView>
        <Grid Margin="0,0,0,389" Grid.RowSpan="3"/>
    </Grid>
</Window>
