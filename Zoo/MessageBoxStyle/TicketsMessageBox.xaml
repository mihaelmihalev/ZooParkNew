<Window x:Class="Zoo.MessageBoxStyle.TicketsMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoo.MessageBoxStyle"
        mc:Ignorable="d"
        Height="50" Width="100"  >

    <Grid Width="100" Height="50">
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\mihael.mihalev\Desktop\Izpitvane\Zoo\Zoo\Images\congratulationsMB.png"/>
        </Grid.Background>
        <TextBlock TextWrapping="Wrap" Text="Успешно закупихте билет/и!" RenderTransformOrigin="0.5,0.5" FontSize="34" HorizontalAlignment="Center" VerticalAlignment="Top" FontStyle="Italic" FontWeight="Bold">
